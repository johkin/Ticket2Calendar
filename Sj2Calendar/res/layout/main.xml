<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >

<CheckBox android:id="@+id/ScanIncoming" android:layout_height="wrap_content" android:text="Läs inkommande SMS" android:layout_width="wrap_content"></CheckBox>
<CheckBox android:text="Ta bort bearbetade SMS" android:id="@+id/DeleteProcessedMsgs" android:layout_width="wrap_content" android:layout_height="wrap_content"></CheckBox>
<Spinner android:id="@+id/CalendarList" android:layout_width="fill_parent" android:layout_height="wrap_content" />

<Button android:text="Stäng" android:id="@+id/Exit" android:layout_width="wrap_content" android:layout_height="wrap_content"></Button>
</LinearLayout>
